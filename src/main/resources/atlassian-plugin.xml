<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
  <plugin-info>
    <description>${project.description}</description>
    <version>${project.version}</version>
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    <param name="plugin-icon">images/pluginIcon.png</param>
    <param name="plugin-logo">images/pluginLogo.png</param>
  </plugin-info>
  <!-- add our i18n resource -->
  <resource type="i18n" name="i18n" location="tutorial-jira-ual"/>
  <!-- add our web resources -->
  <web-resource key="tutorial-jira-ual-resources" name="tutorial-jira-ual Web Resources">
    <dependency>com.atlassian.auiplugin:ajs</dependency>
    <resource type="download" name="tutorial-jira-ual.css" location="/css/tutorial-jira-ual.css"/>
    <resource type="download" name="tutorial-jira-ual.js" location="/js/tutorial-jira-ual.js"/>
    <resource type="download" name="images/" location="/images"/>
    <context>tutorial-jira-ual</context>
  </web-resource>

  <issue-tabpanel key="confluence-space-tab-panel" name="Confluence Space Tab Panel" i18n-name-key="confluence-space-tab-panel.name" class="com.example.plugins.tutorial.jira.tabpanels.ConfluenceSpaceTabPanel">
    <description key="confluence-space-tab-panel.description">The Confluence Space Tab Panel Plugin</description>
    <label key="confluence-space-tab-panel.label"></label>
    <order>10</order>
    <resource name="view" type="velocity" location="templates/tabpanels/confluence-space-tab-panel.vm"/>
    <!-- <resource name="final-view" type="velocity" location="templates/tabpanels/confluence-space-tab-panel.vm"/> -->
  </issue-tabpanel>

  <ao key="ao-module">
    <description>The module configuring the Active Objects service used by this plugin</description>
    <entity>com.example.plugins.tutorial.jira.tabpanels.Todo</entity>
  </ao>

  <issue-link-renderer key="customIssueLinkRenderer"  application-type="com.atlassian.confluence" class="com.example.plugins.tutorial.jira.tabpanels.CustomIssueLinkRenderer">
    <description key="customIssueLinkRenderer.description">Custom renderer of Issue links for confluence application</description>
    <resource name="initial-view" type="velocity" location="templates/tabpanels/initiallink.vm"/>
    <resource name="final-view" type="velocity" location="templates/tabpanels/finallink.vm"/>
  </issue-link-renderer>

</atlassian-plugin>
